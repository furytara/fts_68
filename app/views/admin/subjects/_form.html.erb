<div class="modal-dialog" role="document">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <h4 class="modal-title" id="exampleModalLabel">New subject</h4>
    </div>
    <%= form_for [:admin, subject], remote: :true do |f| %>
    <div class="modal-body">      
        <%= render "shared/error_messages", object: f.object %>
        <div class="form-group">
          <%= f.label :name, class:"control-label" %><br>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :description, class:"control-label" %><br>
          <%= f.text_area :description, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :number_of_questions, class:"control-label" %><br>
          <%= f.number_field :number_of_questions, class: "form-control", 
            step: 5, within: 0...200 %>
        </div>
        <div class="form-group">
          <%= f.label :duration, class:"control-label" %><br>
          <%= f.number_field :duration, class: "form-control",
            step: 1, min: 1 %>
        </div>        
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-default" data-dismiss="modal"><%= t "close" %></button>
      <%= f.submit "Create", class: "btn btn-primary" %>       
      <button type="button" class="btn btn-default" data-dismiss="modal"><%= t "close" %></button>
      <button type="button" class="btn btn-primary" id="subject-new-btn"><%= t "create" %></button>
    </div>
    <% end %>
  </div>
</div>
